
    <h1>Skate Park</h1>

    <div class="py-4">
      <h2>Lista de participantes</h2>

      <hr />

      <table class="table table-dark">
        <thead>
          <tr>
            <th scope="col">#</th>
            <th scope="col">Foto</th>
            <th scope="col">Nombre</th>
            <th scope="col">Años de experiencia</th>
            <th scope="col">Especialidad</th>
            <th scope="col">Estado</th>
          </tr>
        </thead>
        <tbody>
          {{#each users}}
          <tr>
            <th scope="row">{{inc @index }}</th>
            <td><div><img src="{{this.foto}}" width="70px" height="70px" onclick= verfoto("{{this.foto}}",'{{nom this.nombre}}',"{{nom this.especialidad}}")></div></td>
            <td>{{this.nombre}}</td>
            <td>{{this.anos_experiencia}}</td>
            <td>{{this.especialidad}}</td>
            {{#if this.estado}}
            <td class="text-success font-weight-bold">Aprobado</td>
            {{else}}
            <td class="text-warning font-weight-bold">En revisión</td>
            {{/if}}
          </tr>
         {{/each}}
        </tbody>
      </table>
      <a href="/login">Iniciar Sesión</a> |
      <a href="/registro">Registrarme</a>
    </div>
    <script>
     
const verfoto=(f,n,e)=>{
  n.includes('_')? n=n.replace('_',' ') :false;
  e.includes('_')? e=e.replace('_',' ') :false;
 Swal.fire({
  title: `${n}`,
  text: `${e}`,
  imageUrl: f,
  imageWidth: 200,
  imageHeight: 250,
  imageAlt: 'Custom image',
})
}

    </script>